        private void ExitGame()
        {
            WriteLine("\nPress any key to exit...");
            ReadKey(true);
            Environment.Exit(0);
        }
        private void DisplayAboutInfo()
        {
            Clear();
            WriteLine("This game was created by Vincent Landicho, John Gabrielle Enabore & Pat Pajadan");
            WriteLine("It uses assets from https://www.patorjk.com/software/taag/#p=display&h=0&v=0&f=3D%20Diagonal&t=HANG%20MATH");
            WriteLine("Press any key to return to the menu.");
            ReadKey(true);
            RunMainMenu();
        }
        private void RunFirstChoice()
        {//Initialized
            int amountWrong, health, score, index, num1, num2, n1, n2, r, a;
            amountWrong = 0;
            health = 5;
            score = 0;
            string[] Op1 = { "+", "-" };
            string[] Op2 = { "+", "-", "*" };
            string[] Op3 = { "+", "-", "*", "/" };
            Random rnd = new Random();
        //get the user input choose
        lvl:
            Console.Clear();
            Lvlscr();
            Console.SetCursorPosition(69, 6);
            var Choice = Console.ReadKey();

            if (Choice.Key == ConsoleKey.A)//=============================================================easy===========================================================
            {
                do
                {
                Easy:
                    Console.Clear();
                    if (health != 0)
                    {

                        index = rnd.Next(Op1.Length);
                        num1 = rnd.Next(1, 101);
                        num2 = rnd.Next(1, 101);
                        n1 = Math.Max(num1, num2);
                        n2 = Math.Min(num1, num2);
                        PrintMan(amountWrong);
                        Console.Write("Score:{0}\n", score);
                        Console.WriteLine("\n===[ {0}{1}{2} ]===", n1, Op1[index], n2);
                        Console.Write("Answer:");
                        a = int.Parse(Console.ReadLine());

                        if (Op1[index] == "+")//add=========================================================================================================
                        {
                            r = n1 + n2;

                            if (a == r)
                            {
                                score += 5;
                                Console.WriteLine("Correct!");
                            }
                            else if (a != r && health != 0)
                            {
                                health--;
                                amountWrong++;
                                Console.WriteLine("Wrong!!");
                            }
                        }
                        else if (Op1[index] == "-")//minus====================================================================================================
                        {
                            r = n1 - n2;

                            if (a == r)
                            {
                                score += 5;
                                Console.WriteLine("Correct!");
                            }
                            else
                            {
                                health--;
                                amountWrong++;
                                Console.WriteLine("Wrong!!");
                            }
                        }
                        goto Easy;

                    }
                } while (amountWrong <= 5 && health >= 1);
            }//choice 1 end
            else if (Choice.Key == ConsoleKey.B)//==============================================medium===================================================================
            {
                do
                {
                Easy:
                    Console.Clear();
                    if (health != 0)
                    {
                        index = rnd.Next(Op2.Length);
                        num1 = rnd.Next(1, 101);
                        num2 = rnd.Next(1, 41);
                        n1 = Math.Max(num1, num2);
                        n2 = Math.Min(num1, num2);
                        PrintMan(amountWrong);
                        Console.Write("Score:{0}\n", score);
                        Console.WriteLine("\n===[ {0}{1}{2} ]===", n1, Op2[index], n2);
                        Console.Write("Answer:");
                        a = int.Parse(Console.ReadLine());

                        if (Op2[index] == "+")//add
                        {
                            r = n1 + n2;

                            if (a == r)
                            {
                                score += 5;
                                Console.WriteLine("Correct!");
                            }
                            else
                            {
                                health--;
                                amountWrong++;
                                Console.WriteLine("Wrong!!");
                            }
                        }
                        else if (Op2[index] == "-")//minus
                        {
                            r = n1 - n2;

                            if (a == r)
                            {
                                score += 5;
                                Console.WriteLine("Correct!");
                            }
                            else
                            {
                                health--;
                                amountWrong++;
                                Console.WriteLine("Wrong!!");
                            }
                        }
                        else if (Op2[index] == "*")//multiply
                        {
                            r = n1 * n2;

                            if (a == r)
                            {
                                score += 5;
                                Console.WriteLine("Correct!");
                            }
                            else
                            {
                                health--;
                                amountWrong++;
                                Console.WriteLine("Wrong!!");
                            }
                        }
                        goto Easy;
                    }
                } while (amountWrong <= 5 && health >= 1);
            }//end of choice 2
            else if (Choice.Key == ConsoleKey.C)
            {
                do
                {//========================================================hard asp======================================================================
                Easy:
                    Console.Clear();
                    if (health != 0)
                    {

                        index = rnd.Next(Op3.Length);
                        num1 = rnd.Next(1, 101);
                        num2 = rnd.Next(1, 61);
                        n1 = Math.Max(num1, num2);
                        n2 = Math.Min(num1, num2);
                        PrintMan(amountWrong);
                        Console.Write("Score:{0}\n", score);
                        Console.WriteLine("\n===[ {0}{1}{2} ]===", n1, Op3[index], n2);
                        Console.Write("Answer:");
                        a = int.Parse(Console.ReadLine());

                        if (Op3[index] == "+")//add
                        {
                            r = n1 + n2;

                            if (a == r)
                            {
                                score += 5;
                                Console.WriteLine("Correct!");
                                goto Easy;
                            }
                            else
                            {
                                health--;
                                amountWrong++;
                                Console.WriteLine("Wrong!!");
                                goto Easy;
                            }
                        }
                        else if (Op3[index] == "-")//minus
                        {
                            r = n1 - n2;

                            if (a == r)
                            {
                                score += 5;
                                Console.WriteLine("Correct!");
                                goto Easy;
                            }
                            else
                            {
                                health--;
                                amountWrong++;
                                Console.WriteLine("Wrong!!");
                                goto Easy;
                            }
                        }
                        else if (Op3[index] == "*")//multiply
                        {
                            r = n1 * n2;

                            if (a == r)
                            {
                                score += 5;
                                Console.WriteLine("Correct!");
                                goto Easy;
                            }
                            else
                            {
                                health--;
                                amountWrong++;
                                Console.WriteLine("Wrong!!");
                                goto Easy;
                            }
                        }
                        else if (Op3[index] == "/")//divided
                        {
                            r = n1 / n2;

                            if (a == r)
                            {
                                score += 5;
                                Console.WriteLine("Correct!");
                                goto Easy;
                            }
                            else
                            {
                                health--;
                                amountWrong++;
                                Console.WriteLine("Wrong!!");
                                goto Easy;
                            }
                        }
                        goto Easy;
                    }
                } while (amountWrong <= 5 && health >= 0);
            }//end of choices 3
            else
            {
                Console.WriteLine("Wrong Input Try again..");
                goto lvl;
            }
                Thread.Sleep(100);
            Console.Clear();
            Console.WriteLine(@"                                                                                                        
                                  	                ▄══════════||════════▄                                      
                                        	        ║           ▄        ║                                       
                                            		║          ═╦═       ║                                      
                                            		║          ╔╩╗       ║                                       
                                            		║                    ║                                      
                                            		║                    ║                                      
                                            		║                    ║                                      
                                            		║                    ║                                       
                            			        ║                    ║                                      
    		▄      ▄\     ▄\    ▄        ▄        ╔═╩════════════════════╩═╗            /Ö    ▄    ▄    ▄       
   	       /T/    \T     \T    /T\      /T/     ╔═╩════════════════════════╩══╗          T\  /T\  \T/  \T\      
		M      M      M     M        M    ╔═╩═════════════════════════════╩═╗        M    M    M    M     
	▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀       ");
            Thread.Sleep(250);
            Console.Clear();
            Console.WriteLine(@"                                                                                                        
                                  	                ▄══════════||════════▄                                      
                                        	        ║           ▄        ║                                       
                                            		║          ═╦╝       ║                                      
                                            		║           ╠═       ║                                       
                                            		║                    ║                                      
                                            		║                    ║                                      
                                            		║                    ║                                      
                                            		║                    ║                                       
                            			        ║                    ║                                      
    		▄      ▄|     ▄|    ▄        ▄        ╔═╩════════════════════╩═╗            /Ö    ▄    ▄    ▄       
   	       /T|    \T     \T    /T|      /T|     ╔═╩════════════════════════╩══╗          T\  /T|  |T/  |T\      
		M      M      M     M        M    ╔═╩═════════════════════════════╩═╗        M    M    M    M     
	▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀       ");
            Thread.Sleep(100);
