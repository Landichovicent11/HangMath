                                            		║                    ║                                      
                                            		║                    ║                                       
                            			        ║             ▄_/_   ║                                      
    	        ▄      ▄      ▄     ▄        ▄        ╔═╩════════════════════╩═╗            /Ö    ▄    ▄    ▄       
   	       |T|    |T|    /T|   /T|      /T|     ╔═╩════════════════════════╩══╗          T\  /T|  |T|  |T\      
		M      M      M     M        M    ╔═╩═════════════════════════════╩═╗        M    M    M    M       ");

            Console.WriteLine();

            bool loop = true;
            string response;

            List<Tuple<string, int>> scoreboard = LoadScores();
            scoreboard = scoreboard.OrderByDescending(entry => entry.Item2).ToList();

            // ... (existing code)

            do
            {
                // ... (existing code)

            } while (amountWrong <= 5 && health >= 1);

            // Display scoreboard
            Console.WriteLine("***************************");
            Console.WriteLine("*        Scoreboard       *");
            Console.WriteLine("***************************"); 
            foreach (var entry in scoreboard)
            {
                Console.WriteLine($"{entry.Item1}: {entry.Item2}");
            }

            // Ask user to input name if health is 0
            if (health == 0)
            {
                Console.WriteLine("\nYour health is 0. Enter your name to be added to the scoreboard:");
                string playerName = Console.ReadLine();

                // Add the user's name and score to the scoreboard
                scoreboard.Add(new Tuple<string, int>(playerName, score));

                // Update the file with the new scoreboard
                UpdateScores(scoreboard);

                Console.Clear();
                Console.WriteLine("Scoreboard updated!");
                Console.WriteLine("Scoreboard:");
                foreach (var entry in scoreboard)
                {
                    Console.WriteLine($"{entry.Item1}: {entry.Item2}");
                }
            }

            // ... (existing code)

            Console.WriteLine("***************************");
            Console.WriteLine("*     PLAY AGAIN? Y/N     *");
            Console.WriteLine("***************************");
            // ... (existing code)



            var P = Console.ReadKey();
            if (P.Key == ConsoleKey.Y)
            {
                amountWrong = 0;
                health += 5;
                goto lvl;
            }

            // ... (existing code)
        }

        // Load scores from the file
        private List<Tuple<string, int>> LoadScores()
        {
            List<Tuple<string, int>> scores = new List<Tuple<string, int>>();

            if (File.Exists(ScoreFileName))
            {
                string[] lines = File.ReadAllLines(ScoreFileName);

                foreach (string line in lines)
                {
                    string[] parts = line.Split(':');
                    if (parts.Length == 2 && int.TryParse(parts[1], out int score))
                    {
                        scores.Add(new Tuple<string, int>(parts[0], score));
                    }
                }
            }

            return scores;
        }

        // Update scores in the file
        private void UpdateScores(List<Tuple<string, int>> scores)
        {
            using (StreamWriter writer = new StreamWriter(ScoreFileName))
            {
                foreach (var score in scores)
                {
                    writer.WriteLine($"{score.Item1}:{score.Item2}");
                }
            }
            if (ShouldResetScoreboard())
            {
                ResetScoreboard();
                Console.WriteLine("Scoreboard reset!");
            }
        }

        // Your existing methods...

        // Check if the user wants to reset the scoreboard
        private static bool ShouldResetScoreboard()
        {
            Console.WriteLine("Do you want to reset the scoreboard? (Y/N)");
            var response = Console.ReadKey().Key;
            return response == ConsoleKey.Y;
        }

        // Reset the scoreboard by clearing the scores file
        private static void ResetScoreboard()
        {
            File.WriteAllText(ScoreFileName, string.Empty);
        }
    }
}
